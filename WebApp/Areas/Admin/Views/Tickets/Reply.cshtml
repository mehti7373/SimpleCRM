@model WebApp.Areas.Admin.Models.TicketReplyViewModel

@{
    ViewData["Title"] = "پاسخ تیکت";
    Layout = null;
}
<div class="row">
    <div class="col-lg-12">

        <div class="ibox-title">
            <h3>@ViewBag.Title</h3>
        </div>

        <form asp-action="Reply" method="post" enctype="multipart/form-data">
            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Message" class="control-label col-lg-2"></label>
                    <div class="col-lg-6">
                        <textarea asp-for="Message" class="form-control"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="FormFile" class="control-label col-lg-2"></label>
                    <div class="col-lg-6">
                        <input asp-for="FormFile" class="form-control" />
                        <span asp-validation-for="FormFile" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="margin-top-10 col-md-offset-2 col-md-10">
                        <input type="submit" value="پاسخ" class="btn btn-warning" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>