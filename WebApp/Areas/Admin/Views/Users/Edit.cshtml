@model WebApp.Areas.Admin.Models.UserEditViewModel

@{
    ViewBag.Title = "ویرایش کاربر";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">

        <div class="ibox-title">
            <h3>@ViewBag.Title</h3>
        </div>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Email" class="control-label col-lg-2"></label>
                    <div class="col-lg-6">
                        <input asp-for="Email" class="form-control" disabled />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label col-lg-2"></label>
                    <div class="col-lg-6">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label col-lg-2"></label>
                    <div class="col-lg-6">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Role" class="control-label col-lg-2"></label>
                    <div class="col-lg-6">
                        <select class="form-control"
                                  asp-for="Role"
                                  asp-items="@(new SelectList( GetRoleList(), "Id", "Title"))">
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="LockoutEnabled" class="control-label col-lg-2"></label>
                    <div class="col-lg-6">
                        <input asp-for="LockoutEnabled" class="checkbox" />
                        <span asp-validation-for="LockoutEnabled" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="margin-top-10 col-md-offset-2 col-md-10">
                        <input type="submit" value="ویرایش" class="btn btn-warning" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>