@model WebApp.Models.TicketCreateViewModel

@{
    ViewBag.Title = "ثبت تیکت جدید";
}
<div class="container" style="padding:130px">
    <div class="row">
        <div class="col-lg-12">

            <div class="ibox-title">
                <h3>@ViewBag.Title</h3>
            </div>

            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-horizontal">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="required form-group">
                        <label asp-for="CategoryId" class="control-label col-lg-2"></label>
                        <div class="col-lg-6">

                            <select class="form-control"
                                    asp-for="CategoryId"
                                    asp-items="@(new SelectList(await GetAllCategoris(), "Id", "Title"))">
                                <option>انتخاب کنید</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label col-lg-2"></label>
                        <div class="col-lg-6">
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Message" class="control-label col-lg-2"></label>
                        <div class="col-lg-6">
                            <textarea asp-for="Message" class="form-control"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="FormFile" class="control-label col-lg-2"></label>
                        <div class="col-lg-6">
                            <input asp-for="FormFile" class="form-control" />
                            <span asp-validation-for="FormFile" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="margin-top-10 col-md-offset-2 col-md-10">
                            <input type="submit" value="ثبت" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>