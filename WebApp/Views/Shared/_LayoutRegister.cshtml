<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap.rtl.css">
    <link rel="stylesheet" href="~/lib/font-awesome.min.css">
    <link rel="stylesheet" href="~/site/css/style.css" />
    <link rel="stylesheet" href="~/site/css/account.css" />
    <link rel="stylesheet" href="~/account/style-responsive.css">
</head>
<body>
    <div class="main-navbar navbar-fixed-top">

        <div class="navbar navbar-default">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">

                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="#" class="navbar-brand"><img src="~/site/img/HeaderLogo-K.png" class="img-responsive" width="150" height="40"> </a>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active nav-menu"><a href="#banner">خانه </a></li>
                    <li class="nav-menu"><a href="#service">خدمات</a></li>
                    <li class="nav-menu"><a href="#portfolio">نمونه کار </a></li>
                    <li class="nav-menu"><a href="#contact">ارتباط با ما</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <partial name="_CookieConsentPartial" />

        @RenderBody()
    </div>

    <!--libs-->
    <script src="~/lib/js/jquery-2.1.1.js"></script>
    <script src="~/lib/js/jquery.validate.js"></script>
    <script src="~/lib/js/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>